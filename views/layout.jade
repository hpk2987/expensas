doctype html
html
	head
		title= Expensas
		meta(http-equiv='Content-Type',content='text/html; charset=UTF-8')
    
		link(rel='stylesheet', href='/bootstrap-3.2.0-dist/css/bootstrap.css')
		link(rel='stylesheet', href='/bootstrap-3.2.0-dist/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/stylesheets/custom.css')
		link(rel='stylesheet', href='/stylesheets/dropzone.css')
	body
		.container
			nav(class='navbar navbar-default')
				<!-- Brand and toggle get grouped for better mobile display -->
				.navbar-header
				button(	type='button' 
						class='navbar-toggle collapsed' 
						data-toggle='collapse' 
						data-target='#navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar

				a.navbar-brand(href='/') Expensas

				<!-- Collect the nav links, forms, and other content for toggling -->
				div(class='collapse navbar-collapse' id='navbar-collapse')
					ul(class='nav navbar-nav')
						each cuenta in cuentas							
							if cuenta.id == cuenta_actual
								li.active
									a(href="/cuenta?id="+cuenta.id)= cuenta.nombre
							else
								li
									a(href="/cuenta?id="+cuenta.id)= cuenta.nombre

					form(	class="navbar-form navbar-right"
							action="/agregar_cuenta"
							method="POST"
							class="form-inline")
						.form-group
							.input-group
								span.input-group-addon
									span(class='glyphicon glyphicon-user')
								input(class="form-control" requiered type="text" name="nombre")
								span.input-group-btn
									button(class="btn btn-default", type="submit")
										span(class="glyphicon glyphicon-plus")

					ul(class='nav navbar-nav navbar-right')
						if servicio_route
							li.active
								a(href='/servicio')
									span(class='glyphicon glyphicon-wrench service-icon') Servicios

						else
							li
								a(href='/servicio')
									span(class='glyphicon glyphicon-wrench service-icon') Servicios

						li.divider-vertical
					

			block content
    
		<!-- Scripts -->
		script(src='/javascripts/jquery-2.1.1.js', type='text/javascript')
		script(src='/bootstrap-3.2.0-dist/js/bootstrap.js', type='text/javascript')
		script(src='/javascripts/dropzone.js', type='text/javascript')
		script(type='text/javascript').
			$(document).ready(function() { 
				$('#main-control').focus();
			});

		block scripts